doctype html
html(lang="zh-Hant")
  block vars
    - var hasSwiper = true
    - var hasCopyright = true
    - var header_title = 'FreeSeason突破界線 ! 盛夏裡的閃亮飛躍'
    - var author = ''
    - var og_title = 'FreeSeason突破界線 ! 盛夏裡的閃亮飛躍'
    - var og_image = './images/facebook_cover_1200x630.jpg'
    - var og_url = ''
    - var og_desc = '突破界線的瞬間'
    - var meta_keyword = 'FreeSeason突破界線 ! 盛夏裡的閃亮飛躍'
    - var date_publish = '2025-06-05'
  
  head
    block head
      meta(charset="UTF-8")
      meta(http-equiv='X-UA-Compatible', content="IE=edge, Chrome=1")
      meta(http-equiv="Pragma" content="no-cache")
      meta(http-equiv="Expires" content="0")
      //- mobile only
      meta(name="HandheldFriendly" content="true")
      meta(name="MobileOptimized" content="320")
      meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0 , viewport-fit=cover")
      //- meta info
      title #{og_title ? og_title + '' + author : ''}
      meta(property='description', content=og_desc ? og_desc : '')
      meta(property='og:title', content=og_title ? og_title + ' | ' + author : '')
      meta(property='og:image', content=og_image ? og_image : '')
      meta(property='og:url', content=og_url ? og_url : '')
      meta(property='og:type', content='website')
      meta(property='og:locale', content='zh_TW')
      meta(property='og:site_name', content=og_title)
      meta(name='author', content=author)
      meta(name='copyright', content=author)
      if meta_keyword != ''
        meta(name='keywords', content=meta_keyword)
      //- 標準網址
      link(rel='canonical', href=og_url)
      link(rel="shortcut icon", href="https://tw.hicdn.beanfun.com/beanfun/GamaWWW/allProducts/script/footer/images/favicon/favicon-oneBrand.ico", type="image/x-icon")
      //- google fonts
      link(rel="preconnect", href="https://fonts.googleapis.com")
      link(rel="preconnect", href="https://fonts.gstatic.com" crossorigin)
      if hasSwiper
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")
      link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100..900&display=swap" rel="stylesheet")
      link(rel="stylesheet", href="./css/style.css")
      link(rel="stylesheet", href="./css/menu.css")
      script(src="https://tw.beanfun.com/js/GA_CodeNew.js" type="text/javascript")
  body
    block content
    block script
      script(src="./js/jquery-3.7.1.min.js") 
      script(src="./js/animate.js")
      if hasSwiper
        script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")
      script(src="./js/main.js")
      if hasCopyright
        script(src="https://frontend.beanfun.com/plugins/game-footer/game-footer.js" type="text/javascript" id="game-footer" prod="新瑪奇" theme="dark")